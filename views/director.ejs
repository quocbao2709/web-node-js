<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <script>
        var interval = 5000; 
        setTimeout(function() {
            window.location.reload();
        }, interval);
    </script>
    <style>
        body {
            background-color: #4CAF50; 
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #fff; 
        }
        a {
            color: #fff; 
            text-decoration: none; 
            margin: 10px;
        }
        a:hover {
            text-decoration: underline; 
        }
        h1 {
            text-align: center;
        }
        p {
            text-align: center;
        }
        form {
            text-align: center;
            margin: 20px;
        }
        select, input[type="submit"] {
            padding: 10px;
        }
    </style>
</head>
<body>
    <a href="/users/logout">Logout</a>
    <h1><%= title %></h1>
    <p>Welcome to Table Director</p>
    <form action="/users/refreshtime" method="post">
        Update interval (in seconds):
        <select name="interval">
            <option value="5" selected>5</option>
            <option value="15">15</option>
            <option value="20">20</option>
            <option value="30">30</option>
        </select>
        <input type="submit" value="Set">
    </form>
    <%- product_cells %>
</body>
</html>